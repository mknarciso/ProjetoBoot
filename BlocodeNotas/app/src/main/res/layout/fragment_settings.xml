<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_tiny"
        android:layout_margin="@dimen/margin_padding_xxnormal"
        android:gravity="center"
        android:text="@string/export"
        android:background="@color/primary"
        android:textColor="@color/icons" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_tiny"
            android:layout_marginLeft="@dimen/margin_padding_xxnormal"
            android:layout_marginRight="@dimen/margin_padding_xxnormal"
            android:layout_marginBottom="@dimen/margin_padding_xxnormal"
            android:gravity="center"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:text="@string/button_order_title"
            android:id="@+id/button_order_title" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_tiny"
            android:layout_marginLeft="@dimen/margin_padding_xxnormal"
            android:layout_marginRight="@dimen/margin_padding_xxnormal"
            android:layout_marginBottom="@dimen/margin_padding_xxnormal"
            android:gravity="center"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:text="@string/button_order_date_created"
            android:id="@+id/button_order_creation_time"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_tiny"
            android:layout_marginLeft="@dimen/margin_padding_xxnormal"
            android:layout_marginRight="@dimen/margin_padding_xxnormal"
            android:layout_marginBottom="@dimen/margin_padding_xxnormal"
            android:gravity="center"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:text="@string/button_order_date_modified"
            android:id="@+id/button_order_mod_time"/>

</LinearLayout>